.button-tertiary
  color: tertiary
  border-width: 1px
  border-color: secondary
  cursor: pointer
  display: inline-block
  // margin-top: 10px
  &:hover
    color: primary
    border-color: line-on-secondary-background

.button-on-secondary-background
  color: text-on-secondary-background
  border-color: line-on-secondary-background
  background-color: secondary-background
  &:hover
    color: primary
    background-color: secondary-background-active
  &:active,
  &:focus
    border-color: primary
    outline: none

.button-borderless
  cursor: pointer
  display: inline-block
  padding-right: 5px
  position: relative
  &:hover
    opacity: 1;
    background-color: #eaeaea;
    border-radius: 5px;
    border: none;
    .down-arrow
      opacity: 1
