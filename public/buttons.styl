.button,
button
  text-align: left
  font-size: 14px
  line-height: 14px
  font-weight: 600
  background-color: white
  border: solid primary 2px
  display: inline-block
  border-radius: 5px
  padding: 6px 12px
  padding-bottom: 5px
  cursor: pointer
  position: relative
  vertical-align: middle
  &:hover
    background-color: secondary-background
  &:active
    background-color: secondary-background-active
    color: primary
  &.has-emoji
    padding-top: 5px
    padding-bottom: 5px
    
.button-cta
  color: primary
  font-weight: 600
  border: solid primary 2px
  display: inline-block
  border-radius: 5px
  padding: 6px 12px
  cursor: pointer
  background-color: cta
  box-shadow: 4px 4px 0 primary
  &:hover
    background-color: cta
    box-shadow: 2px 2px 0 primary
    // position: relative
    // top: 2px
    // left: 2px
  &:active
    background-color: cta
    box-shadow: none

