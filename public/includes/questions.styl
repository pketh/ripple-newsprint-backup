.questions
  .projects
    padding: 0
    margin: 0

  .project
    background-color: secondary-background-active
    padding: 8px
    height: initial
    min-height: 180px
    a
      color: primary
    &:after
      border: none
    .overflow-mask
      background-color: secondary-background-active

    .project-container
      padding: 8px
      background-color: secondary-background
      height: initial
      border-radius: 3px
      overflow: hidden

    .tag
        background-color: help-tag
        border-radius: 5px
        padding: 3px 5px
        margin-right: 5px
        display: inline-block
        margin-bottom: 6px

  .help-icon
    vertical-align: middle
    width: 28px
    margin-bottom: -3px
    margin-left: 6px

  li
    @media (max-width: 592px)
      width: 100%
      margin-bottom: 0.6rem
      &:last-child
        margin-bottom: 0

pie-duration = 10s
pie-size = 20px
count = infinite

.loader-pie
  position: relative
  width: pie-size
  height: pie-size
  border-radius: 100%
  overflow: hidden
  background-color: secondary-background
  display: inline-block
  vertical-align: top
  transform: rotate(180deg)

  .slice,
  .left-side,
  .right-side
    overflow: hidden
    position: absolute
    width: 50%
    height:100%

  .slice
    background-color: line-on-secondary-background
    position: absolute
    left:100%
    top:0
    width:100%
    height:100%
    border-radius: 100%

  .left-side
    left: 0
    .slice
      border-top-left-radius: 0
      border-bottom-left-radius: 0
      transform-origin: 0 50% 0
      &.animated
        animation: pie-left pie-duration infinite linear

  .right-side
    left: 50%
    .slice
      left:-100%;
      border-bottom-right-radius: 0
      border-top-right-radius: 0	
      transform-origin: 100% 50% 0
      &.animated
        animation: pie-right pie-duration infinite linear

@keyframes pie-left
  0%
    transform:rotate(0deg)
  50%
    transform:rotate(180deg)
  100%
    transform:rotate(180deg)

@keyframes pie-right
  0%
    transform:rotate(0deg)
  50%
    transform:rotate(0deg)
  100%
    transform:rotate(180deg)

