.notifications
  z-index: 11
  // top: 60px
  // right: side-padding
  // position: absolute
  top: 20px
  right: 20px
  position: fixed
  user-select: none
  pointer-events: none

  .notification
    background-color: notification
    color: background-color
    font-size: 12px
    font-weight: 600
    padding: 5px 8px
    border-radius: 5px
    max-width: 260px
    animation-name: hideme
    animation-delay: 2.5s
    animation-duration: 0.1s
    animation-iteration-count: 1
    animation-direction: forward
    animation-fill-mode: forwards
    animation-timing-function: ease-out
    margin-bottom: 5px
    line-height: 16px
    p
      margin: 0
    hr
      opacity: 0.5
      height: 1px
      border: 0
      background-color: background-color
    .loader
      width: 20px
      height: 19px
      margin: 0
      margin-right: 5px

  .notifyUserDescriptionUpdated
    background-color: success

  .notifyUploadFailure
    background-color: error    

  .notifyUploading
    animation: none
    assets-file-icon-active()
    background-repeat: no-repeat
    background-position: 8px 5px
    padding-left: 28px

  // .notifyReconnecting
  //   animation: none
  //   .files-loading
  //     display: inline-block
  //     padding: 0
  //     width: 10px

  .button-in-notification-container
    pointer-events: auto
    overflow: auto
    margin-top: 5px
    margin-bottom: 2px
    :last-child
      margin-right: 0
    .button-in-notification
      height: 27px
      vertical-align: middle
      margin-right: 5px

@keyframes hideme
  0%
    opacity: 1
  100%
    opacity: 0
