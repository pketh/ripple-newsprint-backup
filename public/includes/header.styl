header
  margin-top: 1rem
  position: relative

  .logo
    vertical-align: middle
    margin-right: 5px
    margin-bottom: 1rem
    width: 70px
    
  nav
    position: absolute
    right: 0
    top: 0
    text-align: right
    form
      margin-bottom: 0.5rem
      input
        width: 250px
        @media (max-width: smallViewport)
          width: 160px
    button,
    .button
      margin-left: 10px

    @media (max-width: smallViewport)
      form
        display: block
        input
          margin-top: 0

  .user
    padding: 0
    display: inline-block
    padding-right: 5px
    border: none
    margin: 0
    img
      width: 28px
      height: auto
      position: relative
      display: inline
      border-radius: inherit
      border-radius: 5px
      vertical-align: middle

  .user-options-pop-button
    border: 0
    padding: 0
    cursor: pointer
    display: inline-block
    // padding-right: 5px
    position: relative
    &:hover
    &:focus
      opacity: 1;
      background-color: #eaeaea;
      border-radius: 5px;
      border: none;
      outline: transparent
      .down-arrow
        opacity: 1  
        